# BiomechAI Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Convex Backend Configuration
VITE_CONVEX_URL=https://your-convex-deployment-url.convex.cloud
CONVEX_DEPLOYMENT=your-deployment-name
CONVEX_DEPLOY_KEY=your-convex-deploy-key
CONVEX_SITE_URL=http://localhost:5173

# AI API Keys
GEMINI_API_KEY=your_google_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROK_API_KEY=your_grok_api_key_here

# ESP32 Configuration (Optional - for local server)
ESP32_SERVER_PORT=3001
ESP32_WIFI_SSID=your_wifi_ssid
ESP32_WIFI_PASSWORD=your_wifi_password

# Development Settings
NODE_ENV=development
VITE_APP_VERSION=1.0.0

# Security (Optional)
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Database (if using external database)
DATABASE_URL=your_database_url_here

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
